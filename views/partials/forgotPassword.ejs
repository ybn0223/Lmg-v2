<div class="modal fade" id="forgotPassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true"
<% if (emailNotFound) { %> data-show="true" <% } %> >
<div class="modal-dialog modal-dialog-centered" role="document">
<div class="modal-content">
 <div class="modal-header border-bottom-0">
   <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
 </div>
 <div class="modal-body">
   <div class="form-title text-center">
     <h4>Wachtwoord vergeten</h4>
   </div>
   <div class="d-flex flex-column text-center">
     <form action="/forgotPassword" method="POST">
       <div class="form-group mt-3">
         <input type="email" class="form-control" id="email" name="email" placeholder="e-mailadres" required>
       </div>
       <% if (emailNotFound) { %>
         <p style="color: red;">*e-mailadres niet gevonden*</p>
       <% } %>
       <button type="submit" class="btn btn-warning me-2 mt-4">Verstuur</button>
     </form>
   </div>
 </div>
</div>
</div>
</div>

<script src="/js/index.js"></script>